<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".view.RegisterActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <EditText
        android:id="@+id/user_et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入姓名"
        android:textColorHint="#505050"
        android:text="@string/ps"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/user_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_et_username"
        android:layout_marginTop="10dp"
        android:hint="请输入密码"
        android:textColorHint="#505050"
        android:textSize="20dp" />
    <Button
        android:id="@+id/user_bu_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/user_et_password"
        android:text="@string/zc" />
    <Button
        android:id="@+id/user_bu_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_bu_register"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/user_et_password"
        android:text="@string/dl" />
</LinearLayout>
